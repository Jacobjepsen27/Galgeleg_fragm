<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="dk.jon.lektion2_galgeleg.side2_akt"
    >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainImgImageView"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/galge"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/ordTextView"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/mainImgImageView"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:weightSum="5"
        android:layout_below="@+id/ordTextView"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:padding="0px"
            >


        <Button
            style="@style/bogstaver"
            android:background="@drawable/knap_blaa_bg"
            android:text="A"
            android:id="@+id/A" />

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="B"
                android:id="@+id/B"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="C"
                android:id="@+id/C"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="D"
                android:id="@+id/D"
                />

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="E"
                android:id="@+id/E"
                />


            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="F"
                android:id="@+id/F"
                />

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:padding="0dp">

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="G"
                android:id="@+id/G"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="H"
                android:id="@+id/H"
                />

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="I"
                android:id="@+id/I"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="J"
                android:id="@+id/J"
                />

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="K"
                android:id="@+id/K"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="L"
                android:id="@+id/L"
                />

            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:padding="0dp">

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="M"
                android:id="@+id/M"
                />

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="N"
                android:id="@+id/N"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="O"
                android:id="@+id/O"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="P"
                android:id="@+id/P"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="Q"
                android:id="@+id/Q"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="R"
                android:id="@+id/R"
                />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:padding="0dp">
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="S"
                android:id="@+id/S"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="T"
                android:id="@+id/T"
                />

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="U"
                android:id="@+id/U"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="V"
                android:id="@+id/V"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="W"
                android:id="@+id/W"
                />

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="X"
                android:id="@+id/X"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            >

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="Y"
                android:id="@+id/Y"
             />

            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="Z"
                android:id="@+id/Z"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="Æ"
                android:id="@+id/Æ"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="Ø"
                android:id="@+id/Ø"
                />
            <Button
                style="@style/bogstaver"
                android:background="@drawable/knap_blaa_bg"
                android:text="Å"
                android:id="@+id/Å"
                />

            </LinearLayout>

    </LinearLayout>

</RelativeLayout>


